# Database (Render Postgres)
DB_HOST=your-render-db-host
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASS=your-db-password
DB_PORT=5432

# Scraper config
BATCH_SIZE=10
DELAY_MS=3000

# Optional: if you want to always start from a minimum start ID (helpful for first run)
START_ID=0

# PROGRESS_MODE: 'advance_attempted' or 'advance_on_success'
PROGRESS_MODE=advance_attempted

# Optional proxy: your proxy endpoint that accepts ?url=<encoded>
PROXY_URL=https://proxy-api-kyot.onrender.com/proxy
